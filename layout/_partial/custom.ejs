<article class="post opacity">
    <div class="post-title text-center">
      <h2 class="title"><%= page.title %></h2>
    </div>

     <div class="text-center">
        <span class="post-meta" data-toggle="tooltip" title="发布日期">
          <span class="glyphicon glyphicon-time"></span>
          <span class="post-time"><%- date(page.date, " YYYY") %></span>年<span class="post-time"><%- date(page.date, " MM") %></span>月<span class="post-time"><%- date(page.date, " DD") %></span>日
        </span>
        <span class="post-meta">|</span>
        <span class="post-meta" data-toggle="tooltip" title="更新日期">
          <span class="glyphicon glyphicon-refresh"></span>
          <span class="post-time"><%- date(page.updated, " YYYY") %></span>年<span class="post-time"><%- date(page.updated, " MM") %></span>月<span class="post-time"><%- date(page.updated, " DD") %></span>日
        </span>
        <% if(page.top){ %>
            <span class="post-meta">| <span class="glyphicon glyphicon-pushpin"></span> 置顶</span>
        <% } %>
      </div>

    <br>
    <div class="post-content">
      <%- page.content %>
    </div>
</article>