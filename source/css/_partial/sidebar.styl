.sidebar{
    float: left;
    background-color: #f9f9f9;
    position: sticky;
    top: 60px;
    height: 100%;
    width: 15%;
    padding: 10px;
    margin: 1em;
    box-shadow: 0 4px 8px 0 rgba(0, 0, 0, 0.2), 0 6px 20px 0 rgba(0, 0, 0, 0.19);
}

.sidebar-text{
    color: #777;
}

.sidebar-avatar{
    border-radius: 50%;
    height: 80%;
    width: 80%;
    display: block;
    margin: auto;
}

@media screen and (max-width: 1000px) {
    .sidebar {
        display: none;
    }
}